{
    "name": "@sunodo/cli",
    "version": "0.3.1",
    "description": "Sunodo CLI",
    "author": "Danilo Tuler <tuler@pobox.com>",
    "bin": {
        "sunodo": "./bin/run.js"
    },
    "type": "module",
    "homepage": "https://github.com/sunodo/sunodo",
    "license": "MIT",
    "exports": "./dist/index.js",
    "repository": "sunodo/sunodo",
    "files": [
        "/bin",
        "/dist",
        "/npm-shrinkwrap.json",
        "/oclif.manifest.json"
    ],
    "dependencies": {
        "@oclif/core": "^2.6",
        "@oclif/plugin-help": "^5.2",
        "@oclif/plugin-plugins": "^3.1",
        "@oclif/plugin-update": "^3.1",
        "ansi-colors": "^4.1",
        "bytes": "^3.1",
        "dotenv": "^16.0",
        "execa": "^7.1",
        "fs-extra": "^11",
        "giget": "^1.1",
        "inquirer": "^9.2",
        "node-fetch": "3.3",
        "open": "^9.0",
        "ora": "^6.2",
        "tmp": "^0.2"
    },
    "devDependencies": {
        "@oclif/test": "^2.3",
        "@types/bytes": "^3.1",
        "@types/fs-extra": "^11",
        "@types/inquirer": "^9",
        "@types/node": "^18",
        "@types/node-fetch": "^2.6",
        "@types/prompts": "^2.4",
        "@types/tmp": "^0.2",
        "copyfiles": "^2",
        "eslint": "^8",
        "eslint-config-custom": "*",
        "eslint-config-oclif": "^4",
        "eslint-config-oclif-typescript": "^1",
        "npm-run-all": "^4",
        "oclif": "^3.7",
        "rimraf": "^5",
        "ts-node": "^10.9",
        "tsconfig": "*",
        "tslib": "^2.5",
        "typescript": "^5.0",
        "vitest": "^0.31"
    },
    "oclif": {
        "bin": "sunodo",
        "dirname": "sunodo",
        "commands": "./dist/commands",
        "plugins": [
            "@oclif/plugin-help",
            "@oclif/plugin-update"
        ],
        "topicSeparator": " ",
        "macos": {
            "identifier": "io.sunodo.cli"
        }
    },
    "scripts": {
        "build": "run-s clean compile copy-files",
        "clean": "rimraf dist",
        "compile": "tsc -b",
        "copy-files": "copyfiles -u 1 src/**/*.yml dist",
        "lint": "eslint . --ext .ts --config .eslintrc",
        "postpack": "rimraf oclif.manifest.json",
        "posttest": "yarn lint",
        "prepack": "yarn build && oclif manifest && oclif readme",
        "test": "vitest",
        "version": "oclif readme && git add README.md"
    },
    "engines": {
        "node": ">=18.0.0"
    },
    "bugs": "https://github.com/cartesi/sunodo/issues",
    "keywords": [
        "oclif"
    ],
    "types": "dist/index.d.ts"
}
