{
    "name": "@sunodo/cli",
    "version": "0.3.1",
    "description": "Sunodo CLI",
    "author": "Danilo Tuler <tuler@pobox.com>",
    "bin": {
        "sunodo": "./bin/run.js"
    },
    "type": "module",
    "homepage": "https://github.com/sunodo/sunodo",
    "license": "MIT",
    "exports": "./dist/index.js",
    "repository": "sunodo/sunodo",
    "files": [
        "/bin",
        "/dist",
        "/npm-shrinkwrap.json",
        "/oclif.manifest.json"
    ],
    "dependencies": {
        "@oclif/core": "^2.6.4",
        "@oclif/plugin-help": "^5.2.8",
        "@oclif/plugin-plugins": "^2.4.3",
        "@oclif/plugin-update": "^3.1.8",
        "ansi-colors": "^4.1.3",
        "bytes": "^3.1.2",
        "dotenv": "^16.0.3",
        "enquirer": "^2.3.6",
        "execa": "^7.1.1",
        "fs-extra": "^11.1.1",
        "giget": "^1.1.2",
        "node-fetch": "3.3.1",
        "open": "^9.0.0",
        "ora": "^6.2.0",
        "tmp": "^0.2.1"
    },
    "devDependencies": {
        "@oclif/test": "^2.3.11",
        "@types/bytes": "^3.1.1",
        "@types/fs-extra": "^11.0.1",
        "@types/node": "^18.15.5",
        "@types/node-fetch": "2",
        "@types/prompts": "^2.4.3",
        "@types/tmp": "^0.2.3",
        "eslint": "^8.36.0",
        "eslint-config-custom": "*",
        "eslint-config-oclif": "^4",
        "eslint-config-oclif-typescript": "^1.0.3",
        "oclif": "^3.7.0",
        "shx": "^0.3.3",
        "ts-node": "^10.9.1",
        "tsconfig": "*",
        "tslib": "^2.5.0",
        "turbo": "1.8.4",
        "typescript": "^5.0.2",
        "vitest": "^0.30.1"
    },
    "oclif": {
        "bin": "sunodo",
        "dirname": "sunodo",
        "commands": "./dist/commands",
        "plugins": [
            "@oclif/plugin-help",
            "@oclif/plugin-update"
        ],
        "topicSeparator": " ",
        "macos": {
            "identifier": "io.sunodo.cli"
        }
    },
    "scripts": {
        "build": "shx rm -rf dist && tsc -b",
        "lint": "eslint . --ext .ts --config .eslintrc",
        "postpack": "shx rm -f oclif.manifest.json",
        "posttest": "yarn lint",
        "prepack": "yarn build && oclif manifest && oclif readme",
        "test": "vitest",
        "version": "oclif readme && git add README.md"
    },
    "engines": {
        "node": ">=14.0.0"
    },
    "bugs": "https://github.com/cartesi/sunodo/issues",
    "keywords": [
        "oclif"
    ],
    "types": "dist/index.d.ts"
}
