{
    "name": "@sunodo/cli",
    "version": "0.13.1",
    "description": "Sunodo CLI",
    "author": "Danilo Tuler <tuler@pobox.com>",
    "bin": {
        "sunodo": "./bin/run.js"
    },
    "type": "module",
    "homepage": "https://github.com/sunodo/sunodo",
    "license": "Apache-2.0",
    "exports": "./dist/index.js",
    "repository": "sunodo/sunodo",
    "files": [
        "/bin",
        "/dist",
        "/oclif.manifest.json"
    ],
    "dependencies": {
        "@oclif/core": "^3.26.0",
        "@oclif/plugin-help": "^6.0.20"
    },
    "devDependencies": {
        "@sunodo/eslint-config": "workspace:*",
        "@types/node": "^20.11.30",
        "eslint": "^8.57.0",
        "eslint-config-oclif": "^5.1.1",
        "eslint-config-oclif-typescript": "^3.1.3",
        "npm-run-all": "^4",
        "oclif": "^4.6.3",
        "rimraf": "^5",
        "ts-node": "^10",
        "tsconfig": "workspace:*",
        "typescript": "^5.4.3"
    },
    "oclif": {
        "bin": "sunodo",
        "dirname": "sunodo",
        "commands": "./dist/commands",
        "plugins": [
            "@oclif/plugin-help"
        ],
        "topicSeparator": " ",
        "macos": {
            "identifier": "io.sunodo.cli"
        }
    },
    "scripts": {
        "build": "run-s clean compile",
        "clean": "rimraf dist",
        "compile": "tsc -b",
        "lint": "eslint \"src/**/*.ts*\"",
        "postpack": "rimraf oclif.manifest.json",
        "posttest": "pnpm lint",
        "prepack": "pnpm build && oclif manifest",
        "test": "vitest"
    },
    "engines": {
        "node": ">=18.0.0"
    },
    "bugs": "https://github.com/sunodo/sunodo/issues",
    "keywords": [
        "oclif"
    ],
    "types": "dist/index.d.ts"
}
