{
    "$schema": "https://turbo.build/schema.json",
    "globalEnv": [
        "MNEMONIC",
        "NODE_ENV",
        "PORT",
        "INFURA_ID",
        "ALCHEMY_ID",
        "PRIVATE_KEY",
        "RPC_URL",
        "TS_NODE_PROJECT"
    ],
    "pipeline": {
        "build": {
            "dependsOn": ["^build"],
            "outputs": ["build/**", "dist/**", ".next/**", ".vitepress/dist/**"]
        },
        "start": {
            "dependsOn": ["^build"]
        },
        "lint": {
            "outputs": []
        },
        "dev": {
            "cache": false
        },
        "version": {
            "dependsOn": ["^build"]
        }
    }
}
