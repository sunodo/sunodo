{
    "$schema": "https://turbo.build/schema.json",
    "globalEnv": ["NODE_ENV", "PORT", "TS_NODE_PROJECT"],
    "pipeline": {
        "build": {
            "dependsOn": ["^build"],
            "outputs": ["build/**", "dist/**", ".next/**"]
        },
        "start": {
            "dependsOn": ["^build"]
        },
        "lint": {
            "outputs": []
        },
        "dev": {
            "cache": false
        }
    }
}
