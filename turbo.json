{
    "$schema": "https://turbo.build/schema.json",
    "globalEnv": [
        "MNEMONIC",
        "NODE_ENV",
        "PORT",
        "PROJECT_ID",
        "TS_NODE_PROJECT"
    ],
    "pipeline": {
        "build": {
            "dependsOn": ["^build"],
            "outputs": ["build/**", "dist/**", ".next/**"]
        },
        "start": {
            "dependsOn": ["^build"]
        },
        "lint": {
            "outputs": []
        },
        "dev": {
            "cache": false
        },
        "version": {}
    }
}
